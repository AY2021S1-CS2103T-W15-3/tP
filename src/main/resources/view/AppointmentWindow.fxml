<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.stage.*?>

<fx:root maximized="true" minWidth="400.0" title="Appointment" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/help_icon.png" />
    </icons>
    <scene>
        <Scene stylesheets="@Hospify.css">
            <VBox styleClass="background-babyBlue">
                <children>
               <VBox alignment="CENTER">
                  <children>
                            <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" text="APPOINTMENT SCHEDULE">
                                <font>
                                    <Font name="Consolas Bold" size="30.0" />
                                </font>
                            </Label>
                            <Label fx:id="patientName" alignment="TOP_LEFT">
                                <font>
                                    <Font name="Consolas Bold" size="40.0" />
                                </font>
                            </Label>
                  </children>
               </VBox>
                    <TableView id="appointmentTable" fx:id="appointmentTable" editable="true" minHeight="500.0" stylesheets="@Hospify.css" VBox.vgrow="SOMETIMES">
                        <columns>
                            <TableColumn editable="false" minWidth="150.0" prefWidth="-1.0" styleClass="bold" text="DATE">
                                <cellValueFactory><PropertyValueFactory property="date" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn editable="false" minWidth="800.0" prefWidth="-1.0" text="DESCRIPTION">
                                <cellValueFactory><PropertyValueFactory property="description" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                        <VBox.margin>
                            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                        </VBox.margin>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                    </TableView>
                </children>
            </VBox>
        </Scene>
    </scene>
</fx:root>
