<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>
<fx:root minHeight="500.0" minWidth="1000.0" title="Appointment" type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/help_icon.png"/>
    </icons>
    <scene>
        <Scene stylesheets="@Hospify.css">
            <VBox styleClass="background-babyBlue">
                <children>
                    <VBox alignment="CENTER">
                        <children>
                            <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" text="APPOINTMENT SCHEDULE">
                                <font>
                                    <Font name="Consolas Bold" size="30.0"/>
                                </font>
                            </Label>
                            <Label id="patientName" fx:id="patientName" alignment="TOP_LEFT">
                                <font>
                                    <Font name="Consolas Bold"/>
                                </font>
                            </Label>
                            <VBox>
                                <children>
                                    <HBox spacing="8.0">
                                        <children>
                                            <HBox>
                                                <children>
                                                    <Label styleClass="text-dark" text="NRIC: ">
                                                        <font>
                                                            <Font name="Consolas Bold"/>
                                                        </font>
                                                    </Label>
                                                    <Label fx:id="patientNric" alignment="TOP_LEFT">
                                                        <font>
                                                            <Font name="Consolas Bold"/>
                                                        </font>
                                                    </Label>
                                                </children>
                                            </HBox>
                                            <HBox>
                                                <children>
                                                    <Label styleClass="text-dark" text="PHONE: ">
                                                        <font>
                                                            <Font name="Consolas Bold"/>
                                                        </font>
                                                    </Label>
                                                    <Label fx:id="patientPhone" alignment="TOP_LEFT">
                                                        <font>
                                                            <Font name="Consolas Bold"/>
                                                        </font>
                                                    </Label>
                                                </children>
                                            </HBox>
                                            <HBox>
                                                <Label styleClass="text-dark" text="ADDRESS: ">
                                                    <font>
                                                        <Font name="Consolas Bold"/>
                                                    </font>
                                                </Label>
                                                <Label fx:id="patientAddress" alignment="TOP_LEFT">
                                                    <font>
                                                        <Font name="Consolas Bold"/>
                                                    </font>
                                                </Label>
                                            </HBox>
                                        </children>
                                    </HBox>
                                    <HBox>
                                        <children>
                                            <Label styleClass="text-dark" text="EMAIL: ">
                                                <font>
                                                    <Font name="Consolas Bold"/>
                                                </font>
                                            </Label>
                                            <Label fx:id="patientEmail" alignment="TOP_LEFT">
                                                <font>
                                                    <Font name="Consolas Bold"/>
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <HBox>
                                        <Label styleClass="card_label_important" text="ALLERGIES: ">
                                            <font>
                                                <Font name="Consolas Bold"/>
                                            </font>
                                        </Label>
                                        <Label fx:id="noAllergiesLabel">
                                        </Label>
                                        <FlowPane id="allergies" fx:id="patientAllergies" hgap="5.0">
                                            <VBox.margin>
                                                <Insets/>
                                            </VBox.margin>
                                        </FlowPane>
                                    </HBox>
                                </children>
                            </VBox>
                        </children>
                        <VBox.margin>
                            <Insets left="20.0" top="10.0"/>
                        </VBox.margin>
                    </VBox>
                    <TableView id="appointmentTable" fx:id="appointmentTable" editable="true" minHeight="500.0"
                               stylesheets="@Hospify.css" VBox.vgrow="SOMETIMES">
                        <columns>
                            <TableColumn editable="false" minWidth="150.0" prefWidth="-1.0" styleClass="bold"
                                         text="DATE">
                                <cellValueFactory>
                                    <PropertyValueFactory property="date"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn editable="false" minWidth="800.0" prefWidth="-1.0" text="DESCRIPTION">
                                <cellValueFactory>
                                    <PropertyValueFactory property="description"/>
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                        <VBox.margin>
                            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                        </VBox.margin>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                    </TableView>
                </children>
            </VBox>
        </Scene>
    </scene>
</fx:root>
